<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        .container {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Library System</a>
        <div class="navbar-nav">
            <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-item nav-link" asp-controller="Home" asp-action="Todo">Todo List</a>
        </div>
    </nav>
    <div class="container mt-3">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <partial name="_ErrorPartial" model="@(ViewData["Error"] as LibraryManagementSystem.Models.ErrorViewModel ?? new LibraryManagementSystem.Models.ErrorViewModel())" />
        @RenderBody() <!-- Ensures content renders -->
    </div>
    <footer class="bg-light text-center text-muted py-3">
        <p>© 2025 Library Management System. All rights reserved.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false) <!-- For AJAX scripts -->
</body>
</html>