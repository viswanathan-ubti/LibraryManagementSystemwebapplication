@model LibraryManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Borrow Book";
}

<h2>Borrow a Book</h2>

<form asp-action="BorrowBook" method="post">
    <div class="form-group mb-3">
        <label>Book Code</label>
        <input name="bookCode" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary me-2">Borrow</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</form>