@model LibraryManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Add Book";
}

<h2>Add New Book</h2>

<form asp-action="AddBook" method="post">
    <div class="form-group mb-3">
        <label>Title</label>
        <input name="title" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label>Author</label>
        <input name="author" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label>Book Code</label>
        <input name="bookCode" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary me-2">Add Book</button>
    <a asp-action="ManageBooks" class="btn btn-secondary">Back to Books</a>
</form>
